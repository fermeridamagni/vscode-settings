{
  "workbench.sideBar.location": "right",
  "workbench.iconTheme": "symbols",
  "workbench.colorTheme": "GitHub Dark",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.editorAssociations": {
    "{git,gitlens}:/**/*.{md,csv}": "default",
    "{git,gitlens}:/**/*.{md,csv,svg}": "default"
  },
  // Custom Labels
  "workbench.editor.customLabels.patterns": {
    "**/types/**": "${dirname}/${filename} - Types & Interfaces",
    "**/components/**": "${dirname}/${filename} - Components",
    "**/pages/**": "${dirname}/${filename} - Pages",
    "**/utils/**": "${dirname}/${filename} - Utils",
    "**/services/**": "${dirname}/${filename} - Services",
    "**/hooks/**": "${dirname}/${filename} - Hooks",
    "**/contexts/**": "${dirname}/${filename} - Context",
    "**/assets/**": "${dirname}/${filename} - Assets",
    "**/public/**": "${dirname}/${filename} - Public",
    "**/config/**": "${dirname}/${filename} - Config",
    "**/constants/**": "${dirname}/${filename} - Constants",
    "**/handlers/**": "${dirname}/${filename} - Handlers",
    "**/test/**": "${dirname}/${filename} - Tests"
  },
  "workbench.editor.customLabels.enabled": true,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.tree.indent": 16,

  "symbols.hidesExplorerArrows": true, // Hide arrows in the explorer view to reduce clutter

  "editor.fontFamily": "Hack Nerd Font Mono",
  "editor.selectionHighlight": true,
  "editor.roundedSelection": true,
  "editor.tabSize": 2,
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "expand",
  "editor.renderWhitespace": "all",
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.guides.bracketPairs": true,
  "editor.wordWrap": "on",
  "editor.accessibilitySupport": "off",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,

  "security.workspace.trust.untrustedFiles": "open",

  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": true,
  "explorer.confirmDelete": false,
  "explorer.decorations.badges": false,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
    "pubspec.yaml": "pubspec.lock,pubspec_overrides.yaml,.packages,.flutter-plugins,.flutter-plugins-dependencies,.metadata",
    "*.dart": "${capture}.g.dart",
    "*.sqlite": "${capture}.${extname}-*",
    "*.db": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.s3db": "${capture}.${extname}-*"
  },

  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.fontFamily": "Hack Nerd Font Mono",
  "terminal.integrated.env.windows": {},

  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  },

  /**
   * MCP (Model Context Protocol) settings
   * This is a protocol for AI models to communicate and share context.
   **/
  "mcp": {
    "inputs": [],
    "servers": {
      "playwright": {
        "command": "npx",
        "args": ["@playwright/mcp@latest"]
      },
      "filesystem": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-filesystem", "\"E:\""]
      }
    }
  },

  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.blame.editorDecoration.enabled": true,

  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",

  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[mdx]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "diffEditor.ignoreTrimWhitespace": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Extension to create beautiful screenshots of your code
  "codesnap.backgroundColor": "#1E1E1E",
  "codesnap.shutterAction": "save",
  "codesnap.containerPadding": "2em",

  // more extensions ...
  "containers.containerClient": "com.microsoft.visualstudio.containers.docker",
  "@azure.argTenant": "805cd502-7f18-40aa-b276-2669e9f2e504"
}
